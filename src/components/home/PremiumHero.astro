---
import { Image } from 'astro:assets';
import Button from '../ui/Button.astro';
import heroBgImg from '@assets/photo-1586528116311-ad8dd3c8310d.jpg';
import logoImg from 'public/Sharamaanvilogo.png';
---

<section class="relative h-screen min-h-[600px] flex items-center overflow-hidden">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0">
    <Image 
      src='/Background.jpg'
      alt="Sharamaanvi pvt. LTD."
      class="w-full h-full object-cover"
      width={2070}
      height={1380}
      decoding="async"
      fetchpriority="high"
    />
    <div class="absolute inset-0 bg-linear-to-r from-slate-900/95 via-slate-900/80 to-slate-900/50"></div>
  </div>

  <!-- Content -->
  <div class="container mx-auto relative z-10 px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
      <!-- Left Content -->
      <div class="max-w-4xl">
        
        <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-white mb-6 leading-tight">
          Optimize Your Mobile Safety with
          <span class="block text-transparent bg-clip-text bg-linear-to-r from-blue-400 via-teal-400 to-blue-400 mt-2">
            Sharamaanvi
          </span>
        </h1>
        
        <p class="text-lg md:text-lg text-slate-200 mb-8 max-w-2xl leading-relaxed">
          Sharamaanvi is a leading digital security firm specializing in mobile security solutions, data protection, and secure devices. Through our flagship product, ATMT PRO, From advanced anti-theft sirens and remote camera tracking to dedicated women's safety features and data recovery tools, we provide a complete mobile security suite designed to safeguard individuals and businesses from theft and emergencies.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 mb-6">
          <Button href="https://wa.me/9000186328" size="lg" class="bg-blue-600! hover:bg-blue-700! text-white! shadow-2xl! px-8!">
            Contact Us
          </Button>
          <Button href="/capabilities" size="lg" variant="outline" class="border-2! border-white! text-white! hover:bg-white/10! shadow-2xl! px-8!">
            Our Product
          </Button>
        </div>
      </div>

      <!-- Right Logo -->
      <div class="hidden lg:flex justify-center items-center -mt-8">
        <div class="relative w-full max-w-md xl:max-w-lg">
          <Image 
            src={logoImg}
            alt="ATMT PRO Logo"
            class="w-full h-auto opacity-80 hover:opacity-100 transition-opacity duration-300 drop-shadow-2xl"
            width={2160}
            height={2160}
            decoding="async"
          />
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</section>