---
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/ui/Section.astro';
import Card from '../components/ui/Card.astro';
import Button from '../components/ui/Button.astro';
import CapabilityAccordion from '../components/react/CapabilityAccordion';
import { Image } from 'astro:assets';
import ImageReveal from '../components/react/ImageReveal';

import RC from '@assets/RA.png';
import manufacturingImg from '@assets/AUTOMATIC ALERTS.png';
import transportationImg from '@assets/ATMT PRO MISSING DEVICE REPORT.png';
import supplyChainImg from '@assets/photo-1460925895917-afdab827c52f.jpg';
